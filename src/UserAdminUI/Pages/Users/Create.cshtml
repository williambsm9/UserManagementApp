@page
@model CreateModel

<h2>Create User</h2>

<form method="post">
    <div class="mb-3">
        <label asp-for="User.Name" class="form-label"></label>
        <input asp-for="User.Name" class="form-control" />
        <span asp-validation-for="User.Name" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="User.Email" class="form-label"></label>
        <input asp-for="User.Email" class="form-control" />
        <span asp-validation-for="User.Email" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Groups</label>
        <select asp-for="User.GroupIds"
                asp-items="@(new MultiSelectList(Model.Groups, "Id", "Name"))"
                multiple
                class="form-select">
        </select>
        <span asp-validation-for="User.GroupIds" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-page="Index" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}